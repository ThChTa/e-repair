<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/requestName"
            android:background="@drawable/underline_textview"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="Request from:"
            android:textAlignment="center">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/upDateAndTime"
            android:textSize="25sp"
            android:textColor="@color/myGray"
            android:text="Date &amp; Time"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:layout_below="@+id/requestName"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/downDateAndTime"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="Date &amp; Time"
            android:gravity="center"
            android:layout_below="@+id/upDateAndTime">
        </TextView>


        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id="@+id/downDownDateAndTime"
            android:background="@color/myGrayRV"
            android:layout_below="@id/downDateAndTime"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/upAmount"
            android:textSize="25sp"
            android:textColor="@color/myGray"
            android:text="Amount"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:layout_below="@+id/downDownDateAndTime"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/downAmount"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="Amount"
            android:gravity="center"
            android:layout_below="@+id/upAmount">
        </TextView>

        <View
            android:layout_width="wrap_content"
            android:id="@+id/downDownAmount"
            android:layout_height="2dp"
            android:background="@color/myGrayRV"
            android:layout_below="@id/downAmount"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/upMoreInfo"
            android:textSize="25sp"
            android:textColor="@color/myGray"
            android:text="More Info"
            android:drawableStart="@drawable/baseline_info_24"
            android:layout_below="@+id/downDownAmount"
            android:layout_marginTop="5dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/downMoreInfo"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="MoreInfo"
            android:gravity="center"
            android:layout_below="@+id/upMoreInfo">
        </TextView>

        <View
            android:layout_width="wrap_content"
            android:id="@+id/downDownMoreInfo"
            android:layout_height="2dp"
            android:background="@color/myGrayRV"
            android:layout_below="@id/downMoreInfo"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/publicationIdRequests"
            android:textSize="15sp"
            android:textColor="@color/myGray"
            android:text="id"
            android:drawableStart="@drawable/baseline_numbers_24"
            android:layout_below="@+id/downDownMoreInfo"
            android:layout_marginTop="5dp">
        </TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id="@+id/downPublicationIdRequests"
            android:background="@color/myGrayRV"
            android:layout_below="@id/publicationIdRequests"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_below="@id/downPublicationIdRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAccept"
                    android:layout_width="173dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Accept"
                    android:background="@drawable/custom_button_for_my_publications_accept"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/buttonDecline"
                    android:layout_width="173dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Decline"
                    android:background="@drawable/custom_button_for_my_publications_delete"
                    android:textAllCaps="false"/>


            </LinearLayout>

            <Button
                android:id="@+id/buttonCounteroffer"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Counteroffer"
                android:background="@drawable/custom_button_for_publications_counteroffers"
                android:textAllCaps="false"/>

        </LinearLayout>





    </RelativeLayout>

</androidx.cardview.widget.CardView>